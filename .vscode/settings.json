{
    // RVOS项目的VSCode工作区设置 (C only)
    
    // C/C++配置
    "C_Cpp.default.cStandard": "c11",
    "C_Cpp.default.compilerPath": "/usr/bin/riscv64-unknown-elf-gcc",
    "C_Cpp.default.includePath": [
        "${workspaceFolder}/include",
        "${workspaceFolder}/arch/riscv"
    ],
    "C_Cpp.default.defines": [
        "__riscv",
        "__riscv_xlen=64"
    ],
    
    // 文件关联
    "files.associations": {
        "*.S": "riscv",
        "*.ld": "ld",
        "Makefile*": "makefile",
        "stdarg.h": "c",
        "kernel.h": "c",
        "printk.h": "c",
        "test.h": "c"
    },
    
    // 搜索和文件浏览器排除
    "search.exclude": {
        "**/build": true
    },
    "files.exclude": {
        "**/build": true
    }
}
