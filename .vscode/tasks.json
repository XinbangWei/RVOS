{
  "version": "2.0.0",
  "tasks": [
    {
      "label": "stop-qemu",
      "type": "shell",
      "command": "killall qemu-system-riscv64 || true"
    },
    {
      "label": "start-qemu-server",
      "type": "shell",
      "command": "make qemu-gdb-server",
      "isBackground": true,
      "problemMatcher": [
        {
          "owner": "qemu-server",
          "pattern": {
            "regexp": ".",
            "file": 1,
            "location": 2,
            "message": 0
          },
          "background": {
            "activeOnStart": true,
            "beginsPattern": "^Starting QEMU for GDB connection\\.\\.\\.",
            "endsPattern": "^QEMU GDB server will listen on port"
          }
        }
      ]
    },
    {
      "label": "build-os",
      "type": "shell",
      "command": "make",
      "group": {
        "kind": "build",
        "isDefault": true
      }
    },
    {
      "label": "run-os",
      "type": "shell",
      "command": "make run",
      "dependsOn": [
        "build-os"
      ]
    },
    {
      "label": "Debug: Start QEMU",
      "dependsOrder": "sequence",
      "dependsOn": [
        "stop-qemu",
        "start-qemu-server"
      ],
      "problemMatcher": []
    },
    {
      "label": "Start OpenOCD",
      "type": "shell",
      "command": "openocd",
      "args": [
        "-f",
        "mars_jtag.cfg"
      ],
      "group": "build",
      "isBackground": true,
      "problemMatcher": {
        "pattern": {
          "regexp": "^(.*)$",
          "file": 1
        },
        "background": {
          "activeOnStart": true,
          "beginsPattern": "^Open On-Chip Debugger",
          "endsPattern": "Listening on port 3333 for gdb connections"
        }
      }
    },
    {
      "label": "Stop OpenOCD",
      "type": "shell",
      "command": "pkill",
      "args": [
        "-f",
        "openocd"
      ]
    }
  ]
}